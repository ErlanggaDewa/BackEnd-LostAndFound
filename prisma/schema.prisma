generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Role {
  User
  Admin
}

enum TypePost {
  Lost
  Found
}

enum SocialMediaType {
  WhatsApp
  Line
  Instagram
}

enum TypeQuestion {
  PostQuestion
  UserQuestion
}

enum StatusConfirmation {
  Approved
  Waiting
  Rejected
  Answered
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(User)
  nim       String?
  phone     String?
  imgUrl    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Posts     Post[]
  Questions Question[]
  Answers   Answer[]
}

model Post {
  id              String          @id @default(uuid())
  User            User?           @relation(fields: [userId], references: [id])
  userId          String
  typePost        TypePost
  title           String
  description     String?
  chronology      String?
  socialMediaType SocialMediaType
  socialMedia     String
  imgUrl          String[]
  date            String
  activeStatus    Boolean?        @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  Questions Question[]
}

model Question {
  id             String             @id @default(uuid())
  User           User?              @relation(fields: [userId], references: [id])
  userId         String
  Post           Post?              @relation(fields: [postId], references: [id])
  postId         String
  typeQuestion   TypeQuestion
  question       String
  statusQuestion StatusConfirmation
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  Answers Answer[]
}

model Answer {
  id           String             @id @default(uuid())
  Question     Question?          @relation(fields: [questionId], references: [id])
  questionId   String
  User         User?              @relation(fields: [userId], references: [id])
  userId       String
  answer       String
  statusAnswer StatusConfirmation
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}
